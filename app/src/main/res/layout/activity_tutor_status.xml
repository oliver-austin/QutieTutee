<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorStatusActivity">


    <TextView
        android:id="@+id/userStatus"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:contentDescription="You are in Tutor Mode"
        android:text="Set Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        app:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonActive"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:background="@android:color/holo_green_light"
        android:text="Active"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userStatus" />

    <Button
        android:id="@+id/buttonInactive"
        android:layout_width="200dp"
        android:layout_height="138dp"
        android:background="@android:color/holo_red_light"
        android:text="Inactive"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userStatus" />

    <Button
        android:id="@+id/setStatusBox"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:background="@android:color/holo_green_light"
        android:text="@string/set_status"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>