<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorStatusActivity">


    <TextView
        android:id="@+id/userStatus"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:contentDescription="You are in Tutor Mode"
        android:text="Set Your Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        app:fontFamily="@font/lato_thin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonActive"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_status_active"
        android:text="Active"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userStatus"
        app:layout_constraintVertical_bias="0.292" />

    <Button
        android:id="@+id/buttonInactive"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_status_inactive"
        android:text="Inactive"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userStatus"
        app:layout_constraintVertical_bias="0.29" />

</android.support.constraint.ConstraintLayout>